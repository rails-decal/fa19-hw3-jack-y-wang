	<h2> <%= city.name %></h2>
	<% temperature = (9.0/5) * (city.weather[:temperature] - 273) + 32 %>
	<% description = city.weather[:description] %>
	<p>
		<b> Weather: </b> It's <%= temperature %>Â°F and it looks like <%= description %> <br>
	   	<b> Population:</b> <%= city.population %> <br>
		<b> Landmark: </b> <%= city.landmark %> <br>
	</p>
	<%= link_to '<button type="button">Update</button>'.html_safe, cities_update_path(:city => city.name, :population => city.population, :landmark => city.landmark)%>
